<body>

  <h1>RatBot</h1>
  <div id="chat"></div>

  <div>
    <input type="text" id="userInput" placeholder="Scrivi un messaggio..." onkeydown="if(event.key === 'Enter') sendMessage()">
    <button onclick="sendMessage()">Invia</button>
  </div>

  <script>
    const responses = {
      "ciao": [
        "Cosa ci fai qui",
        "Non dovresti essere qui",
        "Sei nel posto sbagliato",
        "Non appartieni a questo posto vattene",
        "Rat Web non è fatto per gente come te.",
        "Non sei il benvenuto da queste parti.",
        "Torna indietro, prima che sia troppo tardi.",
        "Ti sei perso, vero?",
        "Questo posto non ti porterà niente di buono."
      ]
    };

    function sendMessage() {
      const input = document.getElementById("userInput");
      const message = input.value.trim().toLowerCase();
      if (message === "") return;

      addMessage("Tu", message);

      if (responses[message]) {
        const replyList = responses[message];
        const reply = replyList[Math.floor(Math.random() * replyList.length)];
        addMessage("RatBot", reply);
      } else {
        addMessage("RatBot", "error");
      }

      input.value = "";
    }

    function addMessage(sender, text) {
      const chat = document.getElementById("chat");
      const div = document.createElement("div");
      div.className = "message";
      div.innerHTML = `<span class="${sender === 'Tu' ? 'user' : 'bot'}">${sender}:</span> ${text}`;
      chat.appendChild(div);
      chat.scrollTop = chat.scrollHeight;
    }
  </script>

</body>
